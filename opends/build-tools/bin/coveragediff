# Capture this script's directory
ROOT_DIR=`dirname $0`/../../

# See if JAVA_HOME is set.  If not, then see if there is a java executable in
# the path and try to figure it out.
if test -z "${JAVA_BIN}"
then
  if test -z "${JAVA_HOME}"
  then
    JAVA_BIN=`which java 2> /dev/null`
    if test ${?} -eq 0
    then
      export JAVA_BIN
    else
      echo "Please set JAVA_HOME to the root of a Java 5.0 installation."
      exit 1
    fi
  else
    JAVA_BIN=${JAVA_HOME}/bin/java
    export JAVA_BIN
  fi
fi

CLASSPATH=${ROOT_DIR}/ext/build-tools.jar:${ROOT_DIR}/ext/emma/lib/emma.jar
export CLASSPATH

EMMADATAPATH=${ROOT_DIR}/build/coverage/gathereddata/

cd `pwd`
echo ${CLASSPATH}
# Launch the setup process.
"${JAVA_BIN}" ${JAVA_ARGS} org.opends.build.tools.CoverageDiff ${EMMADATAPATH}

