<stax>

  <defaultcall function="mult_pwd_policies"/>

  <function name="mult_pwd_policies">

      <sequence>

        <!--- Test Case : Preamble 1 - Add New Passwords Policy-->
        <testcase name="'Security: Mult Pwd Policies: Preamble'">
          <sequence>
            <message>
               'Security: Mult Pwd Policies: Preamble - Add Sales Password Policy'
            </message>

            <call function="'addEntry'">
              { 'dsInstanceHost'   : DIRECTORY_INSTANCE_HOST ,
                'dsInstancePort'   : DIRECTORY_INSTANCE_PORT ,
                'dsInstanceDn'     : DIRECTORY_INSTANCE_DN ,
                'dsInstancePswd'   : DIRECTORY_INSTANCE_PSWD ,
                'entryToBeAdded'   : '%s/security/pwd_policy/sales_pwd_policy.ldif' % STAGED_DATA_DIR }
            </call>

            <call function="'checktestRC'">
                { 'returncode' : RC ,
                  'result'     : STAXResult }
            </call>
          </sequence>
        </testcase>

        <!--- Test Case : Add Entry With New Password Policy -->
        <testcase name="'Security: Mult Pwd Policies: Add New Entry'">
          <sequence>
            <message>
               'Security: Mult Pwd Policies: Adding New Entry With Sales Password Policy'
            </message>

            <call function="'addEntry'">
              { 'dsInstanceHost'   : DIRECTORY_INSTANCE_HOST ,
                'dsInstancePort'   : DIRECTORY_INSTANCE_PORT ,
                'dsInstanceDn'     : DIRECTORY_INSTANCE_DN ,
                'dsInstancePswd'   : DIRECTORY_INSTANCE_PSWD ,
                'entryToBeAdded'   : '%s/security/pwd_policy/add_sales_person.ldif' % STAGED_DATA_DIR }
            </call>

            <if expr="RC != 0">
                <tcstatus result="'fail'"/>
            </if>

             <call function="'SearchObject'">
              { 'dsInstanceHost'   : DIRECTORY_INSTANCE_HOST ,
                'dsInstancePort'   : DIRECTORY_INSTANCE_PORT ,
                'dsInstanceDn'     : 'uid=sguy,ou=people,ou=password tests,o=Pwd Policy Tests,dc=example,dc=com' ,
                'dsInstancePswd'   : 'superguy' ,
                'dsBaseDN'   : 'dc=example,dc=com' ,
                'dsFilter'         : 'objectclass=*'  ,
                'extraParams'      : '-s base' }
            </call>

            <if expr="RC != 0">
                <tcstatus result="'fail'"/>
            </if>

             <call function="'SearchObject'">
              { 'dsInstanceHost'   : DIRECTORY_INSTANCE_HOST ,
                'dsInstancePort'   : DIRECTORY_INSTANCE_PORT ,
                'dsInstanceDn'     : 'uid=sgal,ou=people,ou=password tests,o=Pwd Policy Tests,dc=example,dc=com' ,
                'dsInstancePswd'   : 'supergal' ,
                'dsBaseDN'   : 'dc=example,dc=com' ,
                'dsFilter'         : 'objectclass=*'  ,
                'extraParams'      : '-s base' }
            </call>

            <call function="'checktestRC'">
                { 'returncode' : RC ,
                  'result'     : STAXResult }
            </call>

          </sequence>
        </testcase>

        <!--- Test Case : Modify Sales Pwd Policy -->
        <testcase name="'Security: Mult Pwd Policies: Modify Sales Pwd Policy'">
          <sequence>
            <message>
               'Security: Mult Pwd Policies: Admin Changing Sales Lockout Count'
            </message>

            <call function="'modifyEntry'">
              { 'dsInstanceHost'   : DIRECTORY_INSTANCE_HOST ,
                'dsInstancePort'   : DIRECTORY_INSTANCE_PORT ,
                'dsInstanceDn'     : DIRECTORY_INSTANCE_DN ,
                'dsInstancePswd'   : DIRECTORY_INSTANCE_PSWD ,
                'entryToBeModified'   : '%s/security/pwd_policy/admin_change_lockout_cnt_sales.ldif' % STAGED_DATA_DIR }
            </call>

            <call function="'checktestRC'">
                { 'returncode' : RC ,
                  'result'     : STAXResult }
            </call>

          </sequence>
        </testcase>

            
        <!--- Test Case : Test Sales Password Policy -->
        <testcase name="'Security: Mult Pwd Policies: Test Sales Pwd Policy'">
          <sequence>
            <message>
               'Security: Mult Pwd Policies: Testing Sales Pwd Policy with Lockout Count'
            </message>

            <script>
                search_pwds = ['bad', 'bad', 'bad', 'superguy']
            </script>
            
            <iterate var="pwds" in="search_pwds" indexvar="index">
              <call function="'SearchObject'">
                { 'dsInstanceHost'   : DIRECTORY_INSTANCE_HOST ,
                  'dsInstancePort'   : DIRECTORY_INSTANCE_PORT ,
                  'dsInstanceDn'     : 'uid=sguy,ou=people,ou=password tests,o=Pwd Policy Tests,dc=example,dc=com' ,
                  'dsInstancePswd'   : '%s' % pwds ,
                  'dsBaseDN'   : 'dc=example,dc=com' ,
                  'dsFilter'         : 'objectclass=*'  ,
                  'extraParams'      : '-s base' }
              </call>
            </iterate>

            <call function="'checktestRC'">
                { 'returncode' : RC ,
                  'result'     : STAXResult ,
                  'expected'   : 1}
            </call>

          </sequence>
        </testcase>

        <!--- Test Case : Test Default Password Policy -->
        <testcase name="'Security: Mult Pwd Policies: Test Default Pwd Policy'">
          <sequence>
            <message>
               'Security: Mult Pwd Policies: Testing Default Pwd Policy with Lockout Count'
            </message>

            <script>
                search_pwds = ['bad', 'bad', 'bad', 'cardreader']
            </script>
            
            <iterate var="pwds" in="search_pwds" indexvar="index">
              <call function="'SearchObject'">
                { 'dsInstanceHost'   : DIRECTORY_INSTANCE_HOST ,
                  'dsInstancePort'   : DIRECTORY_INSTANCE_PORT ,
                  'dsInstanceDn'     : 'uid=tclow,ou=people,ou=password tests,o=Pwd Policy Tests,dc=example,dc=com' ,
                  'dsInstancePswd'   : '%s' % pwds ,
                  'dsBaseDN'   : 'dc=example,dc=com' ,
                  'dsFilter'         : 'objectclass=*'  ,
                  'extraParams'      : '-s base' }
              </call>
            </iterate>

            <call function="'checktestRC'">
                { 'returncode' : RC ,
                  'result'     : STAXResult }
            </call>

          </sequence>
        </testcase>

        <!--- Test Case : Delete Sales Pwd Policy -->
        <testcase name="'Security: Mult Pwd Policies: Delete Sales Pwd Policy'">
          <sequence>
            <message>
               'Security: Mult Pwd Policies: Admin Deleting Sales Lockout Count'
            </message>

            <call function="'modifyEntry'">
              { 'dsInstanceHost'   : DIRECTORY_INSTANCE_HOST ,
                'dsInstancePort'   : DIRECTORY_INSTANCE_PORT ,
                'dsInstanceDn'     : DIRECTORY_INSTANCE_DN ,
                'dsInstancePswd'   : DIRECTORY_INSTANCE_PSWD ,
                'entryToBeModified'   : '%s/security/pwd_policy/rm_sales_pwd_policy.ldif' % STAGED_DATA_DIR }
            </call>

            <call function="'checktestRC'">
                { 'returncode' : RC ,
                  'result'     : STAXResult }
            </call>

          </sequence>
        </testcase>

        <!--- Test Case : Test Sales Password Policy 2-->
        <testcase name="'Security: Mult Pwd Policies: Test Sales Pwd Policy 2'">
          <sequence>
            <message>
               'Security: Mult Pwd Policies: Testing Sales Pwd Policy with Lockout Count'
            </message>

            <call function="'SearchObject'">
              { 'dsInstanceHost'   : DIRECTORY_INSTANCE_HOST ,
                'dsInstancePort'   : DIRECTORY_INSTANCE_PORT ,
                'dsInstanceDn'     : 'uid=sgal,ou=people,ou=password tests,o=Pwd Policy Tests,dc=example,dc=com' ,
                'dsInstancePswd'   : 'supergal' ,
                'dsBaseDN'   : 'dc=example,dc=com' ,
                'dsFilter'         : 'objectclass=*'  ,
                'extraParams'      : '-s base' }
            </call>

            <call function="'checktestRC'">
                { 'returncode' : RC ,
                  'result'     : STAXResult ,
                  'expected'   : 1}
            </call>

          </sequence>
        </testcase>


        <return>RC</return>

     </sequence>

  </function>

</stax>
