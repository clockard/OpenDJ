        <delaySec>2</delaySec>
      </client>            

      <client id="993" name="secureSearch" host="nott" start="t60"
              stop="t80">
        <serverInstance>I1</serverInstance>
        <baseDn>ou=QA Engineers,dc=com</baseDn>
        <nbCnx>6</nbCnx>
