                  'dsInstancePort'    : master.getPort(),
                  'dsInstanceDn'      : master.getRootDn(),
                  'dsInstancePswd'    : master.getRootPwd(),
                  'DNToModify'        : 'cn=schema',
                  'attributeName'     : 'attributeTypes',
                  'newAttributeValue' : newAttributetype, 
                  'changetype'        : 'add'
