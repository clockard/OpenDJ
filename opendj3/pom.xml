          <execution>
            <id>doc-epub</id>
            <phase>pre-site</phase>
            <goals>
              <goal>generate-epub</goal>
            </goals>
            <configuration>
              <epubCustomization>${dbstyle-dir}/epub/coredoc.xsl</epubCustomization>
              <!-- docbkx-tools does not seem to support multiple embedded
