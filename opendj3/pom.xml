                  <fileset dir="${basedir}/src/main/resources" />
                </copy>
              </preProcess>
            </configuration>
          </execution>
          <execution>
            <id>doc-fo</id>
            <phase>pre-site</phase>
            <goals>
              <goal>generate-pdf</goal>
              <goal>generate-rtf</goal>
            </goals>
            <configuration>
              <foCustomization>${dbstyle-dir}/fo/coredoc.xsl</foCustomization>
            </configuration>
          </execution>
          <execution>
            <id>doc-manpages</id>
            <phase>pre-site</phase>
            <goals>
              <goal>generate-manpages</goal>
            </goals>
